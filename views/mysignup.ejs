    <style>
      body{
      background-color: rgb(37, 63, 73);
      }
      .form{
      margin: auto;
      background-color: cadetblue;
      width: 550px;
      height: max-content;
      /* padding: 0.5%; */
      margin-top: 10%;
      }
      input{
          width: 500px;
          padding: 1%;
          font-size: 19px;
          font-family: sans-serif;
          margin-left: 5%;
          outline: none;
      }
      label{
          margin-left: 5%;
          font-size: 20px;
      }
      button{
          width: 50%;
          padding: 3%;
          font-size: 16px;
          outline: none;
          border: none;
          border-radius: 100px;
          margin-left: 20%;
          cursor: pointer;
      }
      button:hover{
          background-color: black;
          color: white;
      }
      span{
          margin-left: 35%;
          font-size: 20px;
      }
      .header{
        background-color: black;
        width: 100%;
      }
      .error{
        display: flex;
        background-color: rgb(226, 76, 76);
        justify-content: left;
        width: 100%;
      }
      </style>
</head>
<body>
      
     <div class="form">
      <form action="/register" method="post">
       <div class="header">
        <h1 style="text-align: center; font-size: 35px; font-family: serif; color: rgb(247, 218, 181);">Register</h1>
        </div>
          <div class="error">

                <%= error%></div>
          <label><b>Email:</b></label><br>
          <input type="email" name="email" placeholder="Enter a valid email address..." required/><br><br>

          <label><b>Username:</b></label><br>
          <input type="text" name="username" placeholder="Enter your username..." required/><br><br>

          <label><b>Password:</b></label><br>
          <input type="password" name="password" placeholder="Create a new password..." minlength="8" required/><br>

          <br><button type="submit">Signup</button><br><br>
          <span>Already have an account?
              <a href="/login" style="color: white;">Login</a></span>
      </form>
      </div>
</body>
</html>